<% name ||= "Crear" %>
<h1><%= name %> Producto</h1>
<% @product.errors %>
<%= semantic_form_for @product do |f| %>
<%= f.input :producto, placeholder: "Nombre del producto aquí" %>
<%= f.input :descripcion, placeholder: "Descripción" %>
<%= f.input :precio, placeholder: "Precio" %>
<ul class="nav nav-pills", style="margin:0;padding:0">

  <li class="boton-footer", role="presentation", style="hover:green"> 
    <%= f.submit "Guardar", :class => 'text-hack font-medium', style:"width:200px;height:50px" %>
  </li>
  <li class="boton-footer", role="presentation", style="hover:green">
    <%= link_to "Cancelar", "/products", :class => 'text-red font-medium', style:"width:200px;height:50px;background-color:#E4E4E4;border:1px solid grey;border-radius:0;" %> 
  </li> 
</ul>
<% end %>	